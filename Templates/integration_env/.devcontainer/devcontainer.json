{
	"name": "XSOAR Integration",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			// if this value is not set, make sure `demisto-sdk lint` works
			"IMAGENAME": "This should be the name of the test image"
		}
	},
	"containerUser": "demisto",
	"settings": { 
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "python.linting.mypyEnabled": true,
		"python.linting.mypyArgs": [
			"--follow-imports=silent",
			"--ignore-missing-imports",
			"--show-column-numbers",
			"--no-pretty",
			"--allow-redefinition"
		],
        "python.testing.cwd": "${containerWorkspaceFolder}",
        "python.testing.pytestEnabled": true

	},
	"extensions": [
		"ms-python.python",
		"ms-vscode.PowerShell",
		"cortexxsoarext.xsoar",
		"eamodio.gitlens",
		"GitHub.vscode-pull-request-github"
	]
}

{
	"name": "XSOAR Integration",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"IMAGENAME": ""
		}
	},
	"containerUser": "demisto",
	"settings": { 
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "python.linting.mypyEnabled": true,
		"python.linting.mypyArgs": [
			"--follow-imports=silent",
			"--ignore-missing-imports",
			"--show-column-numbers",
			"--no-pretty",
			"--allow-redefinition"
		],
        "python.testing.cwd": "${containerWorkspaceFolder}",
        "python.testing.pytestEnabled": true

	},
	"postCreateCommand": "git config --global --add safe.directory /workspaces/content && rm -rf __pycache__ && rm -rf *.pyc && rm -rf .pytest_cache && rm -rf .mypy_cache",
	"extensions": [
		"ms-python.python",
		"ms-vscode.PowerShell",
		"cortexxsoarext.xsoar",
		"eamodio.gitlens",
		"GitHub.vscode-pull-request-github",
		"njpwerner.autodocstring",
		"streetsidesoftware.code-spell-checker"
	]
}

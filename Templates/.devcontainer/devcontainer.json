{
	"name": "XSOAR Content",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"IMAGENAME": "demisto/python3:3.10.1.25933"
		}
	},
	"containerUser": "root",
	"settings": { 
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "python.linting.mypyEnabled": true,
        "python.testing.cwd": "${containerWorkspaceFolder}",
        "python.testing.pytestEnabled": true,
        "files.autoSave": "afterDelay"

	},
	"postCreateCommand": "pip install pytest pytest-mock requests-mock mypy flake8 autopep8 freezegun --no-cache-dir --disable-pip-version-check",
	"extensions": [
		"ms-python.python",
		"ms-python.vscode-pylance",
		"ms-vscode.PowerShell",
		"cortexxsoarext.xsoar"
	]

}

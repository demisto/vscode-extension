{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Integration",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
        },
        {
            "name": "Docker: Debug in docker",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
              "pathMappings": [
                {
                  "localRoot": "${workspaceFolder}",
                  "remoteRoot": "/app"
                }
              ],
              "projectType": "general",
              "justMyCode": false,
            }
          },
          {
            "name": "Docker: Debug tests in docker",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: test",
            "python": {
              
              "pathMappings": [
                {
                  "localRoot": "${workspaceFolder}",
                  "remoteRoot": "/app",
                },
              ],
              "projectType": "general",
              "justMyCode": false
      
            }
        }
      
    ]
}